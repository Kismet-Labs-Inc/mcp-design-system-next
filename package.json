{
  "name": "mcp-design-system-next",
  "version": "3.0.0",
  "description": "MCP server for Sprout Design System (design-system-next)",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mcp-design-system-next": "./dist/index.js"
  },
  "files": [
    "dist",
    "component-manifest.json"
  ],
  "scripts": {
    "generate-manifest": "npx tsx src/generate-manifest.ts",
    "prebuild": "npm run generate-manifest",
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "design-system",
    "sprout",
    "vue",
    "ai",
    "claude",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "design-system-next": "^2.26.14",
    "ts-morph": "^23.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
